<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Skills</h1>
		    <ul>
		      <% skills.forEach(function(s, idx) { %>
		        <li>
								<form action="/todos/<%=idx %>?_method=DELETE"
									id="delete-form" method="POST">
									<button type="submit">X</button>
								</form>
							<a href="/skills/<%=idx %>">
		          <%= s.skill %></a>
		            - Level
		          <%= s.level %> / 5
		        </li>
		      <% }); %>
				</ul>
				<a href="/skills/new">Add a Skill</a>
		  </body>
  </body>
</html>
